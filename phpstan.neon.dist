includes:
    - phpstan-baseline.neon
    - vendor/knplabs/doctrine-behaviors/phpstan-extension.neon

parameters:
    level: max

    bootstrapFiles:
        - vendor/bin/.phpunit/phpunit/vendor/autoload.php

    paths:
        - src
        - tests

    treatPhpDocTypesAsCertain: false

    excludes_analyse:
        - src/Test/DoctrineOrmTestCase.php
